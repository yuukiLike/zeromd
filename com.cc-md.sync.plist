<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.cc-md.sync</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>__CC_MD_SYNC_SCRIPT__</string>
    </array>

    <key>StartInterval</key>
    <integer>300</integer>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>__CC_MD_HOME__/.cc-md/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>__CC_MD_HOME__/.cc-md/launchd-stderr.log</string>
</dict>
</plist>
